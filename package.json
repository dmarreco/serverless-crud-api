{
  "name": "@dmarreco/serverless-crud-api",
  "version": "1.0.0",
  "description": "Simple C/R/U/D REST API using api using serverless and dynamodb, including local offline integration tests",
  "author": "Daniel Marreco",
  "scripts": {
    "dynamodb:install": "npx serverless dynamodb install",
    "offline:start": "npx serverless offline start --stage local",
    "build": "npx tsc --noEmit",
    "test": "npx jest",
    "test:unit": "npx jest ./test/unit/",
    "lint": "npx eslint --ext .ts --fix .",
    "prettier": "npx prettier --write --ignore-unknown .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.30.1",
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.45",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "serverless": "^3.34.0",
    "serverless-dynamodb": "^0.2.47",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/uuid": "^9.0.7",
    "uuid": "^9.0.1"
  }
}
